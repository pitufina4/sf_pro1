
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      {{ form_start(formulario) }}
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> Alta de producto </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      {{ form_label(formulario.nombre) }}
      {{ form_widget(formulario.nombre) }}

      {{ form_row(formulario.precio) }}
      {{ form_row(formulario.categoria) }}


        
      </div>
      <div class="modal-footer">
     
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary">Guardar</button>
        {{ form_widget(formulario.guardar) }}
      </div>
      {{ form_end(formulario) }}
    </div>
  </div>
</div>